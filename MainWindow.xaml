<Window x:Class="CheckingDiskUsageFolder.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:CheckingDiskUsageFolder"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <StackPanel Orientation="Horizontal" Margin="10">
            <Label Content="Folder URL:"/>
            <TextBox x:Name="FolderUrlTextBox" Width="578"/>
            <Button x:Name="CheckDiskUsageButton" Content="Check Disk Usage" Click="CheckDiskUsageButton_Click"/>
        </StackPanel>

        <ListBox x:Name="DiskUsageListBox" Grid.Row="1" Margin="10"/>
    </Grid>
</Window>
